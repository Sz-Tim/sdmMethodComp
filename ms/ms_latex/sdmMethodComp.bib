doi = {10.1002/ecs2.1238},
isbn = {2150-8925},
issn = {21508925},
journal = {Ecosphere},
keywords = {boosted regression trees,ecological model,emulator,global sensitivity analysis,metamodel,parameter,population growth rate,probability of extinction,species interactions,uncertainty},
number = {3},
pages = {e01238},
title = {{An efficient protocol for the global sensitivity analysis of stochastic ecological models}},
