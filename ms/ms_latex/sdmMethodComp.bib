keywords = {Demography,Garlic mustard,Integral projection model,Japanese barberry,Species distribution model},
month = {apr},
number = {16},
pages = {E3276--E3284},
pmid = {28348212},
publisher = {National Academy of Sciences},
title = {{Climate change both facilitates and inhibits invasive plant ranges in New England}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1609633114},
